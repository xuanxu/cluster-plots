<% # In case the application is served from a subdirectory, this partial defines CSS variables for custom image URLs with the correct prefix. %>
<% # The images here are only referenced inside a CSS class %>
<% prefix = Rails.configuration.relative_url_root || "" %>
<style>
  :root {
    <% ["font", "grid", "line_thickness", "download"].each do |icon_name| %>
      --img-url-<%= icon_name %>: url('<%= prefix %>/imgs/<%= icon_name %>_red900.png');
      --img-url-<%= icon_name %>-hover: url('<%= prefix %>/imgs/<%= icon_name %>_white.png');
    <% end %>
  }
</style>

